
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Allow users to read their own user document
    match /users/{userId} {
      allow read: if request.auth != null && request.auth.uid == userId;
      allow create: if request.auth != null;
    }

    // Allow brand members to read/write data associated with their brand
    match /brands/{brandId} {
      allow read, write: if request.auth != null && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.brandId == brandId;
    }

    match /contacts/{contactId} {
      allow read, write: if request.auth != null && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.brandId == resource.data.brandId;
    }

    match /chats/{chatId} {
      allow read, write: if request.auth != null && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.brandId == resource.data.brandId;
      
      match /messages/{messageId} {
        allow read, write: if request.auth != null && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.brandId == get(/databases/$(database)/documents/chats/$(chatId)).data.brandId;
      }
    }
  }
}
