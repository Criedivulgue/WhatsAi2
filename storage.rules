rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // Permite que qualquer usuário autenticado leia todos os arquivos
    match /{allPaths=**} {
      allow read: if request.auth != null;
    }

    // Permite que um usuário autenticado escreva na sua própria pasta de avatar
    // Garante que o arquivo seja uma imagem e tenha menos de 5MB
    match /avatars/{userId}/{allPaths=**} {
      allow write: if request.auth != null && request.auth.uid == userId
                    && request.resource.size < 5 * 1024 * 1024
                    && request.resource.contentType.matches('image/.*');
    }
  }
}
